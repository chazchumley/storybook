{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"includes": [
			"source/**/*.js",
			"!source/**/accordion-tabs.js",
			"!source/**/typewriter.core.js"
		],
		"ignoreUnknown": true
	},
	"assist": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useBlockStatements": "error",
				"useConsistentArrayType": "error",
				"useTemplate": "off"
			},
			"suspicious": {
				"noDebugger": "error",
				"noEmptyBlockStatements": "error",
				"noDoubleEquals": "off",
				"noPrototypeBuiltins": "off",
				"noShadowRestrictedNames": "off"
			},
			"correctness": {
				"noUnusedVariables": "warn",
				"useExhaustiveDependencies": "warn",
				"noUnusedFunctionParameters": "off"
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": "off",
				"noForEach": "off",
				"useSimplifiedLogicExpression": "off",
				"noUselessStringConcat": "off",
				"useLiteralKeys": "off"
			},
			"performance": {
				"noAccumulatingSpread": "warn"
			}
		}
	},
	"css": {
		"linter": {
			"enabled": false
		},
		"formatter": {
			"enabled": false
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "es5"
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	}
}
